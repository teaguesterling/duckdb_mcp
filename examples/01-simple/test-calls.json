{
  "description": "Test calls for the simple MCP server example",
  "calls": [
    {
      "name": "Initialize connection",
      "request": {
        "jsonrpc": "2.0",
        "id": 1,
        "method": "initialize",
        "params": {
          "protocolVersion": "2024-11-05",
          "capabilities": {},
          "clientInfo": {
            "name": "test-client",
            "version": "1.0.0"
          }
        }
      }
    },
    {
      "name": "List available tools",
      "request": {
        "jsonrpc": "2.0",
        "id": 2,
        "method": "tools/list",
        "params": {}
      }
    },
    {
      "name": "Get database info",
      "request": {
        "jsonrpc": "2.0",
        "id": 3,
        "method": "tools/call",
        "params": {
          "name": "database_info",
          "arguments": {}
        }
      }
    },
    {
      "name": "List tables (empty)",
      "request": {
        "jsonrpc": "2.0",
        "id": 4,
        "method": "tools/call",
        "params": {
          "name": "list_tables",
          "arguments": {}
        }
      }
    },
    {
      "name": "Create a test table",
      "request": {
        "jsonrpc": "2.0",
        "id": 5,
        "method": "tools/call",
        "params": {
          "name": "execute",
          "arguments": {
            "statement": "CREATE TABLE users (id INTEGER PRIMARY KEY, name VARCHAR, email VARCHAR)"
          }
        }
      }
    },
    {
      "name": "Insert test data",
      "request": {
        "jsonrpc": "2.0",
        "id": 6,
        "method": "tools/call",
        "params": {
          "name": "execute",
          "arguments": {
            "statement": "INSERT INTO users VALUES (1, 'Alice', 'alice@example.com'), (2, 'Bob', 'bob@example.com')"
          }
        }
      }
    },
    {
      "name": "Query the table",
      "request": {
        "jsonrpc": "2.0",
        "id": 7,
        "method": "tools/call",
        "params": {
          "name": "query",
          "arguments": {
            "sql": "SELECT * FROM users"
          }
        }
      }
    },
    {
      "name": "Describe the table",
      "request": {
        "jsonrpc": "2.0",
        "id": 8,
        "method": "tools/call",
        "params": {
          "name": "describe",
          "arguments": {
            "table": "users"
          }
        }
      }
    },
    {
      "name": "List tables (should show users)",
      "request": {
        "jsonrpc": "2.0",
        "id": 9,
        "method": "tools/call",
        "params": {
          "name": "list_tables",
          "arguments": {
            "include_views": false
          }
        }
      }
    }
  ]
}
